<div class="challenge-single">
  <h1>Challenge: <%= @challenge.title %></h1>

  <p><%= markdown(@challenge.description) %></p>

  <p class="credit">Posted by <%= @challenge.user.name %> on <%= l @challenge.created_at, :format => :date %></p>
  <p class="actions">
    <%= link_to('View Solutions', challenge_submissions_path(@challenge), class: 'button primary') if 0 < @challenge.submissions.size %>
    <%= link_to('Submit a solution', new_challenge_submission_path(@challenge), class: 'button success')  if current_user %>
    <%= link_to('Edit', edit_challenge_path(@challenge), class: 'button secondary') if current_user == @challenge.user %>
    <%= link_to 'Back to Challenges', challenges_path, class: 'button secondary small pull-right' %>
  </p>
</div>
