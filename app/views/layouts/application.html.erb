  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="row top-banner">
    <div class="large-2 columns">
      <%= image_tag "logo-200.png", alt:"Upfront Wichita", width:"200", height: "100" %>  
