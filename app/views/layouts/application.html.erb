      <dd><a href="#">IRC</a></dd>
      <dd><a href="#">Blog</a></dd>
      <% if user_signed_in? %>
      <div id="nav_user" class="userIO">
        <dd><span><%= current_user.email %></span></dd>
        <dd><%= link_to "Settings", services_path %></li></dd>
        <dd><%= link_to "Sign out", signout_services_path %></dd>
      <% else %>
      <div class="userIO">
        <dd><%= link_to "Sign in", signin_services_path %></dd>
      </div>
      <% end %>
      </dd>
    </dl>
    <dl class="sub-nav large-2 large-offset-1 columns social-tab">
      <!--
      <dd><a href="#"><i class="foundicon-twitter"></i></a></dd>
