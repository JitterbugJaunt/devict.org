    <!-- <li><h4>Git Part II</h4><%= image_tag "gitII.jpg", alt:"Git Part 2" %></li> -->
    <!-- <li><h4>Git Part I</h4><%= image_tag "gitI.jpg", alt:"Git Part 1" %></li> -->
    <!-- <li><h4>Regex 101</h4><%= image_tag "regex101.jpg", alt:"Regular Expressions 101" %></li> -->
  </ul>
</div>
